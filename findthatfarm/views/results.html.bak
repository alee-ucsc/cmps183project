{{extend 'index.html'}}
{{ block body }}


	{{ if farm }}

	{{ if bkg_image }}
		<div id="farm-image" style="background-image:url('/static/uploads/{{bkg_image}}');width:700px;height:15em;float:left;">

			<img src="/static/uploads/{{profile_image}}" style="width:15em;padding-top:50px;padding-left: 20px;float:left;"></img>
			<p style="color:#fff;font-size:3.3em;margin-left:10px;-webkit-text-stroke: 2px black;float:left;"> {{ farmtable.title }}  </p>
		{{ else }}
		<div id="farm-image" style="width:700px;height:15em;float:left;">
			<p style="color:#fff;font-size:3.3em;padding-top:10px;margin-left:10px;-webkit-text-stroke: 2px black;float:left;"> 		{{ farmtable.title }}  </p>
		</div>
		{{ endif }}
	</div>


	<div id="farm-info">
		<div id="farm-contact">
			<ul id="contact">
				<li><h4>Location: {{farm.address}}</h4></li>
				<li><h4>Email: {{farm.email}}</h4></li>
				<li><h4>Phone: {{farm.phone}}</h4></li>
			</ul>
		</div>
		<div id="farm_body">
			<h4>{{farmtable.title}}</h4>
			<p>{{farm.body}}</p>
		</div>
		<div id="products">
			<h3> Products Offered </h3>
			{{ for product in products }}
				<li>{{product}}</li>
			{{ endfor }}
		</div>
		<div id="locations">
			<h3> Where can you find us? </h3>
			{{ for location in locations }}
				<li>{{location}}</li>
			{{ endfor }}
		</div>
	</div>
	{{ else }}

		<h1> Sorry, this farm is not in the DB.</h1>

	{{ endif }}

{{ endblock }}
